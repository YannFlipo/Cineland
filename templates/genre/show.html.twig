{% extends 'base.html.twig' %}

{% block title %}Genre{% endblock %}

{% block body %}
    <h1>Genre</h1>

        <p>{{message}}</p>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ genre.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ genre.nom }}</td>
            </tr>
            <tr>
                <th>Films</th>
                {% for films in genre.getFilms() %}
                <td>{{ films }}</td>
                {% else %}
                    <td colspan="5">Aucun film</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('genre_index') }}">back to list</a>

    <a href="{{ path('genre_edit', {'id': genre.id}) }}">edit</a>

    {{ include('genre/_delete_form.html.twig') }}
{% endblock %}
